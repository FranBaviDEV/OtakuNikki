<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D5D5D5"

    tools:context=".info_usuario">

    <!-- Barra de Navegaci칩n fija en la parte inferior -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/menu_navegador"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/windowBackground"
        app:menu="@menu/menu_navegador"
        android:layout_alignParentBottom="true"/>

    <!-- Contenedor principal con Scroll para el contenido -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/menu_navegador"
        android:padding="45dp"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Secci칩n de imagen de perfil -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/imgPerfil"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/imgperfil"
                    android:background="?android:selectableItemBackgroundBorderless"
                    android:contentDescription="Imagen de perfil" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvNomPerfil"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="Fran"
                        android:textAlignment="center"
                        android:textStyle="bold|italic"
                        android:textSize="25dp" />

                    <Button
                        android:id="@+id/btnCambioPerfil"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cambiar Perfil"
                        android:layout_marginTop="50px" />

                </LinearLayout>
            </LinearLayout>

            <!-- Informaci칩n del usuario -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/usuarioSubrayado"
                android:textStyle="bold|italic"
                android:textSize="25dp"
                android:layout_marginTop="50px" />

            <EditText
                android:id="@+id/etNombreUsuario"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:hint="Nombre de usuario"
                android:layout_marginTop="20px" />

            <Spinner
                android:id="@+id/spRegion"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/correoSubrayado"
                android:textStyle="bold|italic"
                android:textSize="25dp"
                android:layout_marginTop="100px" />

            <EditText
                android:id="@+id/etCorreoUsuario"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:hint="Correo del usuario"
                android:layout_marginTop="20px" />

            <EditText
                android:id="@+id/etContraseniaUsuario"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:hint="Contrase침a del usuario"
                android:layout_marginTop="20px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/gestionPerfil"
                android:textStyle="bold|italic"
                android:textSize="25dp"
                android:layout_marginTop="100px" />

            <LinearLayout
                android:layout_marginTop="50px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnEliminarPerfil"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Eliminar Perfil" />

                <Button
                    android:id="@+id/btnDesconexion"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Desconectarse"
                    android:layout_marginLeft="50px" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
