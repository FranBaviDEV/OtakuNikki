<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/moradoYNegroIcono"
    android:padding="12dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/imgRetroceso"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/flechasalir"
            android:background="@android:color/transparent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_margin="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="COMENTARIOS"
            android:textColor="@color/moradoMuyClaroIcono"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layoutHiloPrincipal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/moradoYAzulIcono"
        android:padding="12dp"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/tvTituloHiloDetalle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TÃ­tulo del Hilo"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/moradoMuyClaroIcono" />

        <TextView
            android:id="@+id/tvUsuarioHiloDetalle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Usuario"
            android:textSize="14sp"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tvFechaHiloDetalle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fecha"
            android:textSize="12sp"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tvComentarioHiloDetalle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Comentario del hilo..."
            android:textSize="14sp"
            android:textColor="@color/white"
            android:layout_marginTop="8dp" />
    </LinearLayout>

    <ListView
        android:id="@+id/rvRespuestas"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/moradoYAzulIcono"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/btnResponder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Responder"
        android:textColor="@color/white"
        android:backgroundTint="@color/moradoMuyClaroIcono" />
</LinearLayout>
