<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/moradoYNegroIcono"
    tools:context=".Fragmentos.FragmentoListas"
    android:padding="20px"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        >

        <TextView
            android:id="@+id/tvMisListas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:text="Mis listas"
            android:textSize="50dp"
            android:textStyle="bold"
            android:textColor="@color/moradoMuyClaroIcono"
            android:gravity="center_vertical"
            />

        <ImageButton
            android:id="@+id/imgBtnAgregarLista"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/plus"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:background="@color/fui_transparent"
            />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#356FF6"
        android:layout_marginVertical="8dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#2A023A"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/tvNroListas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0/11 Listas"
            android:textSize="30dp"
            android:layout_margin="20px"
            android:textStyle="bold"
            android:textColor="@color/moradoMuyClaroIcono"
            />

        <ListView
            android:id="@+id/lvListasAnimes"
            android:layout_margin="20px"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#380350"
            />

    </LinearLayout>
</LinearLayout>