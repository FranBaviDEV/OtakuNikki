<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="@color/moradoYNegroIcono"
    android:padding="12dp">

    <ImageButton
        android:id="@+id/imgRetroceso"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/flechasalir"
        android:background="@android:color/transparent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="5dp" />

    <LinearLayout
        android:id="@+id/layoutHiloPrincipal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/moradoYAzulIcono"
        android:padding="12dp"
        android:layout_below="@id/imgRetroceso"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/tvTituloHiloDetalle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Título del Hilo"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/moradoMuyClaroIcono" />

        <TextView
            android:id="@+id/tvUsuarioHiloDetalle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Usuario"
            android:textSize="14sp"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tvFechaHiloDetalle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fecha"
            android:textSize="12sp"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tvComentarioHiloDetalle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Comentario del hilo..."
            android:textSize="14sp"
            android:textColor="@color/white"
            android:layout_marginTop="8dp" />
    </LinearLayout>

    <!-- RecyclerView para las respuestas -->
    <!--Esto he visto que mejora la optimización en vez de poner un ListView, por si hay muchas respuestas o por si queresmos cargarlas de forma automática desde fireBase-->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvRespuestas"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/layoutHiloPrincipal"
        android:layout_above="@id/btnResponder"
        android:background="@color/moradoYAzulIcono"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/btnResponder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Responder"
        android:layout_alignParentBottom="true"
        android:textColor="@color/white"
        android:layout_marginBottom="80dp"
        android:backgroundTint="@color/moradoMuyClaroIcono" />

</RelativeLayout>
