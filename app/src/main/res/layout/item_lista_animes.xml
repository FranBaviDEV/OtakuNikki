<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="30px">


    <TextView
        android:id="@+id/tvTituloLista"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="@color/moradoMuyClaroIcono"
        android:text="Animes Favoritos"
        />

    <TextView
        android:id="@+id/tvNroAnimesGuardados"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="33 animes"
        android:layout_marginLeft="40px"
        android:textSize="20dp"
        android:textColor="#E9E9E9"
        />



        <TextView
            android:id="@+id/tvFechaModificacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Actualizado el 10 dic, 2024"
            android:layout_marginLeft="40px"
            android:textSize="20dp"
            android:textColor="#E9E9E9"
            />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="30px"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="90dp"
            android:layout_height="120dp"
            android:layout_marginRight="40px"
            app:cardCornerRadius="10dp">
            <ImageView
                android:id="@+id/imgAnime0"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#380350"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="90dp"
            android:layout_height="120dp"
            android:layout_marginRight="40px"
            app:cardCornerRadius="10dp"
            >

            <ImageView
                android:id="@+id/imgAnime1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#380350"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="90dp"
            android:layout_height="120dp"
            android:layout_marginRight="40px"
            app:cardCornerRadius="10dp"
            >

            <ImageView
                android:id="@+id/imgAnime2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#380350"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:cardCornerRadius="10dp"
            >

            <ImageView
                android:id="@+id/imgAnime3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#380350"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop" />

        </androidx.cardview.widget.CardView>
    </LinearLayout>


</LinearLayout>