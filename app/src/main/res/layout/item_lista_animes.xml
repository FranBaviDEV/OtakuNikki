<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30px"
    >


    <TextView
        android:id="@+id/tvTituloLista"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:textStyle="bold"
        android:text="Animes Favoritos"
        />

    <TextView
        android:id="@+id/tvNroAnimesGuardados"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="33 animes"
        android:layout_marginLeft="40px"
        android:textSize="20dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Actualizado el "
            android:layout_marginLeft="40px"
            android:textSize="20dp"
            />

        <TextView
            android:id="@+id/tvFechaModificacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10 dic, 2024"
            android:textSize="20dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="30px"
        >

        <ImageView
            android:id="@+id/imgAnime0"
            android:layout_width="79dp"
            android:layout_height="108dp"
            android:layout_marginRight="40px"
            android:background="?android:selectableItemBackgroundBorderless"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/imgAnime1"
            android:layout_width="79dp"
            android:layout_height="108dp"
            android:layout_marginRight="40px"
            android:background="?android:selectableItemBackgroundBorderless"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/imgAnime2"
            android:layout_width="79dp"
            android:layout_height="108dp"
            android:layout_marginRight="40px"
            android:background="?android:selectableItemBackgroundBorderless"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/imgAnime3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="?android:selectableItemBackgroundBorderless"
            android:scaleType="centerCrop" />
    </LinearLayout>


</LinearLayout>