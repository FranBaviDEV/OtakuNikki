<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ActividadVistaDetalleAnime">

    <ImageButton
        android:id="@+id/imgRetroceso"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/flechasalir"
        android:scaleType="centerCrop"
        android:background="@android:color/transparent"
        android:layout_gravity="start"
    />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">



        <ImageView
            android:id="@+id/imgFotoPrincipal"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="200dp"
            android:scaleType="fitStart"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvTituloAnime"
                android:paddingLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:hint="Titulo"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tvSinopsisAnime"
                android:paddingLeft="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="4"
                android:hint="Aquí va la sinopsis"
                android:ellipsize="end"
                android:clickable="true"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvEmision"
                    android:layout_width="151dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:clickable="true"
                    android:hint="En emision ●"
                    android:paddingLeft="5dp"
                    android:textColor="@color/rojo"
                    android:textColorHint="@color/rojo" />

                <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:src="@drawable/heart"
                >
                </ImageButton>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>