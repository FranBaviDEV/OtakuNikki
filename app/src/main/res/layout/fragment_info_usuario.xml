<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragmentos.FragmentInfoUsuario"
    android:background="@color/moradoYNegroIcono">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <!-- SecciÃ³n de imagen de perfil -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="120dp"
                android:layout_height="120dp"
                app:cardCornerRadius="40dp"
                app:cardElevation="4dp"
                android:layout_gravity="center">

                <!--Lo utilizo para el fondo de la imagen porque  si no no se puede-->
                <ImageView
                    android:id="@+id/imgFondoPerfil"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:background="@color/moradoClaroIcono"
                    />

                <ImageButton
                    android:layout_gravity="center"
                    android:id="@+id/imgPerfil"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?android:selectableItemBackgroundBorderless"
                    android:contentDescription="Imagen de perfil"
                    android:scaleType="centerCrop"
                    android:src="@drawable/imgperfil"/>
            </androidx.cardview.widget.CardView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvNomPerfil"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Fran"
                    android:textAlignment="center"
                    android:textSize="30dp"
                    android:textColor="@color/moradoMuyClaroIcono"
                    android:textStyle="bold|italic" />

                <Button
                    android:id="@+id/btnCambioPerfil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50px"
                    android:textColorHint="@color/blancoIcono"
                    android:backgroundTint="@color/moradoClaroIcono"
                    android:textColor="@color/blancoIcono"
                    android:focusedSearchResultHighlightColor="@color/moradoMuyClaroIcono"
                    android:text="Cambiar Perfil"
                    android:textSize="17dp"
                    />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/moradoDifuminadoIcono"
                android:text="@string/usuarioSubrayado"
                android:textSize="30dp"
                android:textStyle="bold|italic" />

            <EditText
                android:id="@+id/etNombreUsuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20px"
                android:textSize="23dp"
                android:textColorHint="@color/blancoIcono"
                android:backgroundTint="@color/moradoClaroIcono"
                android:textColor="@color/blancoIcono"
                android:hint="Nombre de usuario" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="50px"
            android:layout_marginBottom="12dp">

            <TextView
                android:id="@+id/tvRegionSeleccionada"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:textColorHint="@color/blancoIcono"
                android:textColor="@color/blancoIcono"
                android:textSize="16sp"
                android:text="@string/pais_seleccionado"
                android:textStyle=""/>

            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/spRegion"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColorHint="@color/blancoIcono"
                android:backgroundTint="@color/moradoClaroIcono"
                android:textColor="@color/blancoIcono"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="110dp"
        >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/moradoDifuminadoIcono"
                android:text="@string/correoSubrayado"
                android:textSize="30dp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/tvCorreoUsuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20px"
                android:textSize="23dp"
                android:textColorHint="@color/blancoIcono"
                android:backgroundTint="@color/moradoClaroIcono"
                android:textColor="@color/blancoIcono"
                android:hint="Correo del usuario" />


        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/moradoDifuminadoIcono"
                android:text="@string/gestionPerfil"
                android:textSize="30dp"
                android:textStyle="bold|italic" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50px"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnGuardarCambios"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/blancoIcono"
                    android:backgroundTint="@color/moradoClaroIcono"
                    android:focusedSearchResultHighlightColor="@color/moradoMuyClaroIcono"
                    android:text="Guardar cambios"
                    android:textSize="17dp"
                    />

                <Button
                    android:id="@+id/btnDesconexion"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50px"
                    android:layout_weight="1"
                    android:textColor="@color/blancoIcono"
                    android:backgroundTint="@color/moradoClaroIcono"
                    android:focusedSearchResultHighlightColor="@color/moradoMuyClaroIcono"
                    android:text="Desconectarse"
                    android:textSize="17dp"
                    />
            </LinearLayout>
        </LinearLayout>
        <Button
            android:id="@+id/btnEliminarPerfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/blancoIcono"
            android:backgroundTint="@color/moradoClaroIcono"
            android:focusedSearchResultHighlightColor="@color/moradoMuyClaroIcono"
            android:text="Eliminar Perfil"
            android:textSize="17dp"
            />
    </LinearLayout>

</FrameLayout>